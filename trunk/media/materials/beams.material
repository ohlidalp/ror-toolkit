material TruckEditor/BeamNormal
{
    technique
    {
        pass
        {
			lighting off
			depth_check on
            scene_blend alpha_blend
            depth_write off
            texture_unit
            {
                colour_op_ex source1 src_manual src_current 0 0.5 0
                alpha_op_ex source1 src_manual src_current 1
            }
        } 
    }
}

