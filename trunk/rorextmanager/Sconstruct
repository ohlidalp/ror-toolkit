import glob, os
env = Environment()

#libxml
env.ParseConfig('xml2-config --cflags --libs')

#curl
env.ParseConfig('curl-config --cflags --libs')

srclst = ['rormanager.c']

myCPPFlags = ['-g',  '-Wall']

env.Program(
  target='rormanager',
  source=srclst,
  LIBPATH=env['LIBPATH']+['.'],
  CPPFLAGS=env['CPPFLAGS']+myCPPFlags,
)
